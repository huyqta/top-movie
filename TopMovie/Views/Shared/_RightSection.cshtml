@inject Movie.Services.Models.webphimContext context;

<cache vary-by="@context">
    @{ 
        var movieDaily = context.TbMovie.Where(m => m.ReleaseDate.Value.AddDays(3) >= DateTime.Now).Take(4).Select(m => new { Id = m.Id, MovieName = m.MovieName, MovieTag = m.MovieTag, ReleaseDate = m.ReleaseDate, ImageUrl = m.ImageUrl });
        var movieWeekly = context.TbMovie.Where(m => m.ReleaseDate.Value.AddDays(7) >= DateTime.Now).Take(4).Select(m => new { Id = m.Id, MovieName = m.MovieName, MovieTag = m.MovieTag, ReleaseDate = m.ReleaseDate, ImageUrl = m.ImageUrl });
        var movieMonthly = context.TbMovie.Where(m => m.ReleaseDate.Value.AddDays(30) >= DateTime.Now).Take(4).Select(m => new { Id = m.Id, MovieName = m.MovieName, MovieTag = m.MovieTag, ReleaseDate = m.ReleaseDate, ImageUrl = m.ImageUrl });
    }
    @* --- RIGHT SECTION--- *@
    <div class="col-md-3">
        @* --- NEWS --- *@
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">WELCOME!!</h3>
                    </div>
                    <div class="box-body box-profile">
                        <span>
                            All JAV movies are mobile ready.

                            This is a quality JAV tube, content is handpicked.

                            If a video is down (and you want it), let me know in the comments section.
                        </span>
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
        @* --- MOVIE BY PERIOD --- *@
        <div class="row">
            <div class="col-md-12 custom-nav-tabs">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item"><a class="nav-link active" href="#daily" data-toggle="tab">Daily</a></li>
                    <li class="nav-item"><a class="nav-link" href="#weekly" data-toggle="tab">Weekly</a></li>
                    <li class="nav-item"><a class="nav-link" href="#monthly" data-toggle="tab">Monthly</a></li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="daily" role="tabpanel" aria-labelledby="daily-tab">
                        @foreach (var mv in movieDaily)
                        {
                            <div class="box">
                                <div class="box-body box-profile">
                                    <a href="@Url.Content("/movie/" + @mv.Id)" target="_self">
                                        <img class="movie-img img-responsive" src="@mv.ImageUrl" alt="@mv.MovieName">
                                    </a>
                                    <a href="@Url.Action("movie/" + @mv.Id)" target="_self">
                                        <div class="movie-title">
                                            <h6 class="text-bold">@mv.MovieName</h6>
                                        </div>
                                    </a>

                                    <i class="fa fa-tags"></i>
                                    @foreach (var tag in mv.MovieTag.Split(","))
                                    {
                                        <a href="@Url.Content("/tag/" + tag)" target="_self">@tag</a><span>,</span>
                                    }
                                </div>
                                <!-- /.box-body -->
                            </div>
                        }
                    </div>
                    <!-- /.tab-pane -->
                    <div class="tab-pane fade" id="weekly" role="tabpanel" aria-labelledby="weekly-tab">
                        @foreach (var mv in movieWeekly)
                        {
                            <div class="box">
                                <div class="box-body box-profile">
                                    <a href="@Url.Content("/movie/" + @mv.Id)" target="_self">
                                        <img class="movie-img img-responsive" src="@mv.ImageUrl" alt="@mv.MovieName">
                                    </a>
                                    <a href="@Url.Action("movie/" + @mv.Id)" target="_self">
                                        <div class="movie-title">
                                            <h6 class="text-bold">@mv.MovieName</h6>
                                        </div>
                                    </a>

                                    <i class="fa fa-tags"></i>
                                    @foreach (var tag in mv.MovieTag.Split(","))
                                    {
                                        <a href="@Url.Content("/tag/" + tag)" target="_self">@tag</a><span>,</span>
                                    }
                                </div>
                                <!-- /.box-body -->
                            </div>
                        }
                    </div>
                    <!-- /.tab-pane -->
                    <div class="tab-pane fade" id="monthly" role="tabpanel" aria-labelledby="monthly-tab">
                        @foreach (var mv in movieMonthly)
                        {
                            <div class="box">
                                <div class="box-body box-profile">
                                    <a href="@Url.Content("/movie/" + @mv.Id)" target="_self">
                                        <img class="movie-img img-responsive" src="@mv.ImageUrl" alt="@mv.MovieName">
                                    </a>
                                    <a href="@Url.Content("/movie/" + @mv.Id)" target="_self">
                                        <div class="movie-title">
                                            <h6 class="text-bold">@mv.MovieName</h6>
                                        </div>
                                    </a>

                                    <i class="fa fa-tags"></i>
                                    @foreach (var tag in mv.MovieTag.Split(","))
                                    {
                                        <a href="@Url.Content("/tag/" + tag)" target="_self">@tag</a><span>,</span>
                                    }
                                </div>
                                <!-- /.box-body -->
                            </div>
                        }
                    </div>
                    <!-- /.tab-pane -->
                </div>

            </div>
        </div>
