<div class="row">
    @foreach (var mv in Model.movies)
    {
        <div class="col-md-4">
            <div class="box">
                <div class="box-body box-profile">
                    <img class="movie-img img-responsive" src="@mv.ImageUrl" alt="@mv.MovieName">

                    <h3 class="profile-username">@mv.MovieName</h3>

                    <p class="text-muted">
                        <i class="fas fa-tags"></i>@mv.ActorTag
                    </p>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    }
</div>